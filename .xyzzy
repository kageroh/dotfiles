(load-library "multi-major-mode.l")
(defun multi-html-mode ()
  (multi-mode t "html+-mode"
			  '("<!--" "-->" "text-mode")
			  '("<![CDATA" "]]>" "text-mode")
			  '("<pre" "</pre>" "text-mode")
			  '("<textarea" "</textarea>" "text-mode")
			  '("<style" "</style>" "css+-mode")
			  '("<script" "</script>" "javascript-mode")
			  '("<?php" "?>" "php-mode")
			  )
  )
(add-hook 'ed::*html+-mode-hook* 'multi-html-mode)
