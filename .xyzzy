; buffer
(setq *next-buffer-in-tab-order* t)
(global-set-key #\M-Down 'next-buffer)
(global-set-key #\M-Up 'previous-buffer)

; window
(global-set-key #\M-PageUp 'move-previous-window)
(global-set-key #\M-PageDown 'other-window)

